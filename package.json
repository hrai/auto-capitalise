{
  "name": "auto-capitalise-extension",
  "title": "Auto Capitalise Extension",
  "version": "2.0.0",
  "description": "Browser add-on to automatically capitalise the first letter of a sentence while typing.",
  "scripts": {
    "start": "run-script-os",
    "start:win32": "yarn build-dev && web-ext run --firefox=\"c:/Program Files/Firefox Developer Edition/firefox.exe\" --start-url localhost:3000",
    "start:darwin:linux": "yarn build-dev && web-ext run --firefox=firefox-developer --start-url localhost:3000",
    "start:chrome": "run-script-os",
    "start:chrome:win32": "yarn build-dev && cd distribution && web-ext run -t chrome --start-url localhost:3000",
    "start:chrome:linux": "yarn build-dev && cd distribution && web-ext run -t chromium --chromium-binary '/usr/bin/microsoft-edge' --start-url localhost:3000",
    "build": "yarn webpack",
    "build-dev": "yarn webpack --mode=development",
    "watch": "yarn build --watch",
    "watch-dev": "yarn build-dev --watch",
    "web": "nodemon app.js",
    "test": "yarn jest",
    "test-watch": "yarn jest --watch test/",
    "lint": "eslint .",
    "lint-fix": "eslint --fix .",
    "update-version:chrome": "yarn dot-json distribution/manifest_v3.json version $VER && cd distribution && mv manifest_v3.json manifest.json",
    "update-version:firefox": "yarn dot-json distribution/manifest_v2.json version $VER && cd distribution && mv manifest_v2.json manifest.json",
    "release:firefox": "cd distribution && yarn web-ext-submit",
    "release:chrome": "cd distribution && npx chrome-webstore-upload-cli@2 upload --auto-publish",
    "prepare": "yarn husky install"
  },
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 2,
    "singleQuote": true
  },
  "devDependencies": {
    "@babel/core": "^7.18.6",
    "@babel/eslint-parser": "^7.18.2",
    "@babel/preset-env": "^7.18.6",
    "bootstrap": "^5.1.3",
    "copy-webpack-plugin": "^11.0.0",
    "daily-version": "^2.0.0",
    "dot-json": "^1.2.1",
    "eslint": "^8.19.0",
    "eslint-webpack-plugin": "^3.2.0",
    "express": "^4.18.1",
    "express-rate-limit": "^6.4.0",
    "husky": "^8.0.1",
    "jest": "^28.1.2",
    "jest-environment-jsdom": "^28.1.2",
    "jquery": "^3.5.1",
    "lint-staged": "^13.0.3",
    "nodemon": "^2.0.19",
    "prettier": "^2.7.1",
    "run-script-os": "^1.1.3",
    "sinon": "^14.0.0",
    "web-ext": "^7.1.1",
    "web-ext-submit": "^7.1.1",
    "webextension-polyfill": "^0.9.0",
    "webpack": "^5.73.0",
    "webpack-cli": "^4.10.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/hrai/auto-capitalise"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "yarn eslint --fix",
      "yarn prettier --write"
    ]
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/hrai/auto-capitalise/issues"
  },
  "keywords": [
    "webextensions",
    "auto-capitalise"
  ],
  "homepage": "https://github.com/hrai/auto-capitalise",
  "webExt": {
    "sourceDir": "distribution",
    "run": {
      "keepProfileChanges": true,
      "startUrl": [
        "http://localhost:3000"
      ]
    }
  },
  "dependencies": {
    "chrome-webstore-upload-cli": "^2.1.0"
  }
}
